@model TraCuuThuatNgu.ViewModels.UserHistoryViewModel
@{
    ViewBag.Title = "Lịch sử tra cứu";
    Layout = "~/Views/Shared/_Root.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="span span9-account">
    <div class="head">
        <div class="icm-user">
        </div>
        <h1>
            Thông tin tài khoản</h1>
        <div class="clear">
        </div>
    </div>
    <div class="block">
        <ul class="simple-menu">
            <li><a href="">Thông tin tài khoản</a> </li>
            <li><a href="">Đóng góp của tôi</a> </li>
            <li><a href="">Bình luận của tôi</a> </li>
            <li  class="active"><a class="active" href="/UserHistory">Lịch sử tra cứu</a> </li>
            <li><a href="">Yêu thích</a> </li>
        </ul>
    </div>
</div>
<div class="span span8-account">
    <div class="head">
        <div class="icm-zoom">
        </div>
        <h1>
            Lịch sử tra cứu</h1>
        <div class="clear">
        </div>
    </div>
    <div class="block">
        <table cellpadding="0" cellspacing="0" width="100%" class="table">
            <thead>
                <tr>
                    <th width="50%">
                        Từ tra cứu
                    </th>
                    <th width="25%">
                        Ngày tra cứu
                    </th>
                    <th width="25%">
                        Thao tác
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AllUserHistory)
                {
                    <tr>
                        <td>
                            @item.Keyword
                        </td>
                        <td>
                            @String.Format("{0:d/M/yyyy HH:mm}", item.DateModify)
                        </td>
                        <td>
                            <a class="btn-delete" href="#">
                            <input type="hidden" value="@item.HistoryId" />Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="view-more">
            <a class="btn-link">Xem tất cả</a></div>
        <div class="clear">
        </div>
    </div>
</div>
<div class="clear">
</div>
