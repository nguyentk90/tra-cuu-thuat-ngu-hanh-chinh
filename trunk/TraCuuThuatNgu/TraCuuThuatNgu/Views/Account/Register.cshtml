@model TraCuuThuatNgu.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
@section Header {
    <div id="header-bar">
        <ul id="menu">
            <li><a href="@Url.Content("~/Home")">Trang chủ</a> </li>
            @Html.Partial("_LogOnPartial")
        </ul>
    </div>
}
<div id="home-search">
    <div id="logo">
        <img src="../../Content/img/red-search-icon.png" alt="Tra cứu thuật ngữ" />
    </div>
</div>
<div class="logon-wapper">
    <h2>
        Đăng ký tài khoản</h2>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    
        <div class="register-form">
            <p>
                Mật khẩu phải nhiều hơn @Membership.MinRequiredPasswordLength kí tự.
            </p>
            <div class="editor-label">
                Tên đăng nhập
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                <br />@Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                Email
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                <br />@Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="editor-label">
                Mật khẩu
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                <br />@Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                Nhập lại mật khẩu
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                <br />@Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <p>
                <input type="submit" class="btn" value="Đăng ký" />
            </p>
        </div>   
    }
</div>
@section Footer {
    <div class="footer-info">
        <a href="#">Hướng dẫn sử dụng</a> <a href="#">Giới thiệu</a> <a href="#">Phát triển</a>
    </div>
}
