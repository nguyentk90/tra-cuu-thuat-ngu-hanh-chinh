@model TraCuuThuatNgu.Models.LogOnModel
@{   
    ViewBag.Title = "Log On";
}
@section Header {
    <div id="header-bar">
        <ul id="menu">
            <li><a href="@Url.Content("~/Home")">Trang chủ</a> </li>
            @Html.Partial("_LogOnPartial")
        </ul>
    </div>
}
<div id="home-search">
    <div id="logo">
        <img src="../../Content/img/red-search-icon.png" alt="Tra cứu thuật ngữ" />
    </div>
</div>
<div class="logon-wapper">
    <h2>
        ĐĂNG NHẬP</h2>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
    @using (Html.BeginForm())
    {
   
        <div class="login-form">
            <div class="editor-label">
                Tên đăng nhập
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                <br />
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                Mật khẩu
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                <br />@Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                Ghi nhớ
            </div>
            <p>
                <input type="submit" class="btn" value="Đăng nhập" />
            </p>
            <p>
                @Html.ActionLink("Đăng ký", "Register") nếu bạn chưa có tài khoản.
            </p>
        </div>
    }
</div>
<div id="extra-infor">
    <p>
        Hệ thống tra cứu thuật ngữ hành chính văn phòng và hoạt động xã hội.</p>
</div>
@section Footer {
    <div class="footer-info">
        <a href="#">Hướng dẫn sử dụng</a> <a href="#">Giới thiệu</a> <a href="#">Phát triển</a>
    </div>
}
